<UserControl
    x:Class="MVVM_pratices_2.View.SaveLoadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVM_pratices_2.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MVVM_pratices_2.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20" Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  標題  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,20"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="請選擇存檔欄位" />

        <!--  存檔欄位列表  -->
        <ItemsControl
            Grid.Row="1"
            Margin="0,20"
            ItemsSource="{Binding SaveSlots}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Margin="10"
                        Padding="10"
                        Command="{Binding DataContext.SelectSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}">
                        <StackPanel>
                            <TextBlock>
                                <Run Text="角色：" />
                                <Run Text="{Binding CharacterName, TargetNullValue=None}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="等級：" />
                                <Run Text="Lv." />
                                <Run Text="{Binding Level}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="時間：" />
                                <Run Text="{Binding DisplayTime, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  返回按鈕  -->
        <Button
            Grid.Row="2"
            Width="100"
            Height="40"
            Margin="0,10"
            HorizontalAlignment="Center"
            Command="{Binding BackCommand}"
            Content="返回" />
    </Grid>
</UserControl>
